@model IEnumerable<CW4.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nazwa)
            </th>
            <th></th>
            <th>Grupy</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nazwa)
                </td>
                <td>
                    <table class="table">
                        @foreach(var g in item.CourseGroups)
                        {
                            <tr>
                                <td> @g.Group.Nazwa</td>
                                <td>
                                    @{ 
                                        var xkey = new Dictionary<string, string>
                                        {
                                            {"cid" ,g.CourseID.ToString()},
                                            {"gid", g.GroupID.ToString() }
                                        };
                                    }
                                    <a asp-action="Grade" asp-all-route-data="xkey">Oceny</a>
                                </td>
                            </tr>
                        }

                    </table>
                </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
    </tr>
}
        </tbody>
        </table>
